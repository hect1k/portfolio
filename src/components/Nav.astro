---
  const pages = [
    {
      name: "Home",
      link: "/",
    },
    {
      name: "Projects",
      link: "/projects",
    },
    {
      name: "Blogs",
      link: "/blogs",
    },
    {
      name: "Contact",
      link: "/contact",
    },
    {
      name: "Résumé",
      link: "/Resume.pdf",
    }
  ];

---
<div id="menu" class="hidden fixed top-20 z-20 w-screen h-screen flex flex-col items-center justify-start text-2xl gap-4 bg-neutral-950 bg-opacity-80 backdrop-blur-md shadow-md shadow-black p-6">
  {pages.map((page) => (
<a
        class="w-full h-20 flex items-center justify-center font-bold uppercase bg-white bg-opacity-20 rounded p-2 py-1 transition-all ease-in-out duration-300"
        href={page.link}
      >
        {page.name}
      </a>

  ))}
</div>
<nav class="sticky top-0 z-10 w-screen h-20 flex gap-4 justify-between items-center bg-neutral-950 bg-opacity-80 backdrop-blur-md shadow-md shadow-black text-white text-md md:text-xl p-6 md:py-4 md:px-6 lg:px-36">
  <h1 class="text-2xl md:text-3xl font-bold hover:underline">
    <a href="/">Nnisarg Gada.</a>
  </h1>
  <div id="menu-open">
  <i
    class="fas fa-bars text-2xl cursor-pointer hover:bg-white hover:bg-opacity-40 p-2 rounded md:hidden"
  ></i>
    </div>
  <div id="menu-close" class="hidden">
  <i
    class="fas fa-close text-2xl cursor-pointer hover:bg-white hover:bg-opacity-40 p-2 rounded md:hidden"
  ></i>
    </div>
  <div class="hidden md:flex gap-6">
    {pages.map((page) => (
      <a
        class={`rounded p-2 py-1 transition-all ease-in-out duration-300 hover:scale-110 ${page.name == 'Résumé' ? "bg-white bg-opacity-20 text-2xl uppercase tracking-widest font-bold hover:shadow-lg hover:shadow-black" : "hover:bg-white hover:bg-opacity-20"}`}
        href={page.link}
      >
        {page.name}
      </a>
    ))}
  </div>
</nav>

<script>
  const menu = document.getElementById("menu");
  const open_button = document.getElementById("menu-open");
  const close_button = document.getElementById("menu-close");
  const nav = document.querySelector("nav");

  function toggleMenu() {
    if (!menu || !open_button || !close_button || !nav) return;
    if (menu.classList.contains("hidden")) {
      menu.classList.remove("hidden");
      open_button.classList.add("hidden");
      close_button.classList.remove("hidden");
      nav.classList.remove("shadow-md");
      nav.classList.remove("shadow-black");
      document.body.classList.add("overflow-y-hidden");
    }
    else {
      menu.classList.add("hidden");
      open_button.classList.remove("hidden");
      close_button.classList.add("hidden");
      nav.classList.add("shadow-md");
      nav.classList.add("shadow-black");
      document.body.classList.remove("overflow-y-hidden");
    }
  }

  if(open_button && close_button) {
    open_button.addEventListener("click", toggleMenu);
    close_button.addEventListener("click", toggleMenu);
  }
</script>
