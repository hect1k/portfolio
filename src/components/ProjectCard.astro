---
import { Image } from "astro:assets";
const project = Astro.props.project;
---

<article
  class="move-up flex h-fit flex-col items-stretch overflow-hidden rounded bg-background-light shadow-lg transition-all duration-300 ease-in-out hover:-translate-y-1 hover:scale-105 hover:bg-white md:flex-row dark:bg-neutral-800 dark:hover:bg-neutral-700"
>
  {
    project.image && (
      <Image
        src={`/images/projects/${project.image}`}
        alt={project.title}
        width={800}
        height={450}
        format="webp"
        class="aspect-video object-cover md:w-1/3"
      />
    )
  }
  <div
    class="flex w-full flex-col gap-4 p-4 text-sm text-text-light md:text-base dark:text-text-dark"
  >
    <h2 class="text-2xl font-bold md:text-3xl">{project.title}</h2>
    <p class="text-base md:text-lg">{project.description}</p>
    <div class="flex flex-wrap gap-2 font-bold italic text-accent">
      {
        project.categories.map((category: string) => (
          <a
            class="text-xs hover:underline md:text-sm"
            href={`/projects/${category}`}
            title={`View projects in ${category}`}
          >
            #{category}
          </a>
        ))
      }
    </div>
    <div
      class="flex w-full flex-col gap-6 md:mt-auto md:flex-row md:items-center md:justify-between md:pr-12"
    >
      <div class="flex gap-4">
        {
          project.url && (
            <a
              href={project.url}
              title={`View demo for ${project.title}`}
              target="_blank"
              class="rounded bg-accent px-4 py-2 text-xs font-bold text-text-dark transition-all duration-300 ease-in-out hover:-translate-y-1 hover:scale-105 hover:drop-shadow-xl md:text-sm"
            >
              Demo
            </a>
          )
        }
        {
          project.repo && (
            <a
              href={project.repo}
              title={`View source code for ${project.title}`}
              target="_blank"
              class="rounded bg-background-dark bg-opacity-80 px-4 py-2 text-xs font-bold text-text-dark transition-all duration-300 ease-in-out hover:-translate-y-1 hover:scale-105 hover:drop-shadow-xl md:text-sm dark:bg-background-light dark:bg-opacity-20"
            >
              Github Repo
            </a>
          )
        }
      </div>
      {
        project.blog && (
          <a
            href={`/blog/${project.blog}`}
            title={`Read blog about ${project.title}`}
            class="text-xs font-bold text-accent underline transition-all duration-300 ease-in-out hover:translate-x-2 md:text-sm"
          >
            Read Blog
          </a>
        )
      }
    </div>
  </div>
</article>
