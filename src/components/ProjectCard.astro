---
const project = Astro.props.project;
---

<article
  class="move-up h-fit flex items-stretch flex-col md:flex-row bg-white bg-opacity-20 rounded overflow-hidden shadow-lg shadow-black"
>
  {
    project.image && (
      <img
        src={`/images/projects/${project.image}`}
        alt={project.title}
        loading="lazy"
        decoding="async"
        class="md:w-1/3 aspect-video object-cover"
      />
    )
  }
  <div class="w-full md:w-2/3 flex flex-col gap-2">
    <div class="flex flex-col justify-evenly gap-4">
      <h2 class="text-3xl bg-black bg-opacity-50 font-bold p-4">
        {project.title}
      </h2>
      <p class="text-2xl font-semibold p-4 py-0">
        {project.description}
      </p>
    </div>
    <div class="flex flex-wrap gap-2 p-4 py-2 text-accent font-bold italic">
      {
        project.categories.map((category: string) => (
          <a class="hover:underline" href={`/projects/${category}`}>
            #{category}
          </a>
        ))
      }
    </div>
    <div
      class="w-full md:mt-auto flex flex-col md:flex-row md:items-center md:justify-between gap-6 p-6 md:pr-12"
    >
      <div class="flex gap-4">
        {
          project.url && (
            <a
              href={project.url}
              title={`View demo for ${project.title}`}
              target="_blank"
              class="bg-accent font-bold px-4 py-2 rounded transition-all ease-in-out duration-300 hover:drop-shadow-xl hover:-translate-y-1 hover:scale-105"
            >
              Demo
            </a>
          )
        }
        {
          project.repo && (
            <a
              href={project.repo}
              title={`View source code for ${project.title}`}
              target="_blank"
              class="bg-black bg-opacity-30 font-bold px-4 py-2 rounded transition-all ease-in-out duration-300 hover:drop-shadow-xl hover:-translate-y-1 hover:scale-105"
            >
              Github Repo
            </a>
          )
        }
      </div>
      {
        project.blog && (
          <a
            href={`/blog/${project.blog}`}
            title={`Read blog about ${project.title}`}
            class="font-bold text-accent underline transition-all ease-in-out duration-300 hover:translate-x-2"
          >
            Read Blog
          </a>
        )
      }
    </div>
  </div>
</article>
