---
import { Image } from "astro:assets";
const project = Astro.props.project;
---

<article
  class="dark:bg-text/10 dark:hover:bg-text/20 flex h-fit flex-col items-stretch overflow-hidden rounded bg-white/25 shadow-lg transition-all duration-300 ease-in-out hover:-translate-y-1 hover:scale-105 hover:bg-white md:flex-row"
>
  {
    project.image && (
      <Image
        src={`/images/projects/${project.image}`}
        alt={project.title}
        width={1280}
        height={720}
        format="webp"
        class="aspect-video object-cover md:w-1/3"
      />
    )
  }
  <div class="flex w-full flex-col gap-4 p-4 text-sm md:text-base">
    <h2 class="text-2xl font-bold md:text-3xl">{project.title}</h2>
    <p class="text-base md:text-lg">{project.description}</p>
    <div class="text-primary flex flex-wrap gap-2 font-bold italic">
      {
        project.categories.map((category: string) => (
          <a
            class="text-xs hover:underline md:text-sm"
            href={`/projects/${category}`}
            title={`View projects in ${category}`}
          >
            #{category}
          </a>
        ))
      }
    </div>
    <div
      class="flex w-full flex-col gap-6 md:mt-auto md:flex-row md:items-center md:justify-between md:pr-12"
    >
      <div class="flex gap-4">
        {
          project.url && (
            <a
              href={project.url}
              title={`View demo for ${project.title}`}
              target="_blank"
              class="bg-primary text-background dark:text-text rounded px-4 py-2 text-xs font-bold transition-all duration-300 ease-in-out hover:-translate-y-1 hover:scale-105 hover:drop-shadow-xl md:text-sm"
            >
              Demo
            </a>
          )
        }
        {
          project.repo && (
            <a
              href={project.repo}
              title={`View source code for ${project.title}`}
              target="_blank"
              class="bg-primary/25 rounded px-4 py-2 text-xs font-bold transition-all duration-300 ease-in-out hover:-translate-y-1 hover:scale-105 hover:drop-shadow-xl md:text-sm"
            >
              Source Code
            </a>
          )
        }
      </div>
      {
        project.blog && (
          <a
            href={`/blog/${project.blog}`}
            title={`Read blog about ${project.title}`}
            class="w-fit text-xs font-bold underline transition-all duration-300 ease-in-out hover:translate-x-2 md:text-sm"
          >
            Read Blog
          </a>
        )
      }
    </div>
  </div>
</article>
