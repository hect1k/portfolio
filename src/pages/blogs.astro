---

import ScreenLayout from "@layouts/Screen.astro";
import { formatDate, calculateReadingTime, formatBlogPosts } from "@utils";
import { getCollection } from "astro:content";

let blogs  = await getCollection("blogs");
console.log(typeof blogs[0].data.tags);
---

<ScreenLayout title="Blogs by Nnisarg Gada">
  <div class="w-full flex flex-col gap-6 p-6 md:py-24">
    <h1 class="text-5xl font-bold">Blogs</h1>
    <div class="flex flex-col gap-6">
    {blogs.map((blog: any) => 
      (!blog.data.draft && (blog.data.pubDate < new Date())) && (
      <a class="h-fit flex flex-col md:flex-row bg-white bg-opacity-20 hover:bg-opacity-30 shadow-lg hover:shadow-black hover:-translate-y-1 hover:scale-105 rounded cursor-pointer transition-all ease-in-out duration-300" href={`/blogs/${blog.slug}`}>
        {(blog.data.image) && (
          <img loading="lazy" class=" md:w-1/3 object-cover rounded-t md:rounded-none md:rounded-l" src={blog.data.image} alt={blog.data.title} />
        )}
        <div class="w-full flex flex-col justify-evenly gap-4 p-4">
          <h2 class="text-3xl font-bold">{blog.data.title}</h2>
          <h3 class="text-lg">{blog.data.description}</h3>
          <div class="flex flex-wrap gap-2">
            {blog.data.tags.split(", ").map((tag: string) => (
              <div class="font-bold text-sm bg-accent px-2 py-1 rounded">#{tag}</div>
            ))}
          </div>
          <p class="text-xl">{formatDate(blog.data.pubDate)} â€¢ <span class="italic">{calculateReadingTime(blog.body)} mins</span></p>
        </div>
      </a>
      )
    )}
    </div>
  </div>
</ScreenLayout>
